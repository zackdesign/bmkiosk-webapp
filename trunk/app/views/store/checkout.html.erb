<div class="depot-form">
  <%= error_messages_for 'order' %>
  <h2>Shopping Cart Contents</h2>
    <div id="chkcart">
<%= render(:partial => "store/main_cart" , :object => @cart) %>
    </div>
<br /><br />
  <fieldset>
    <legend>Please Enter Your Details</legend>

    <% form_for :order, :url => { :action => :save_order } do |form| %>
      <p class="padded">
        <label for="order_name">Name:</label><br>
        <%= form.text_field :name, :size => 40 %>
      </p>

      <p class="padded">
        <label for="order_phone">Phone Number:</label><br>
        <%= form.text_field :phone_no, :size => 40 %>
      </p>

      <p class="padded">
        <label for="order_email">E-Mail:</label><br>
        <%= form.text_field :email, :size => 40 %>
      </p>

      <p class="padded">
        <label for="order_message">Message [optional]:</label><br>
        <%= form.text_area :message, :rows => 3, :cols => 40 %>
      </p>

      <!--<p class="padded">
        <label for="order_pay_type">Pay with:</label><br>
        <%#=
          form.select :pay_type,
                       Order::PAYMENT_TYPES, 
                      :prompt => "Select a payment method"
        %>
      </p>-->
    
      <%= submit_tag "Notify BM Tronics Sales Rep", :class => "submit" %>
    <% end %>  
  </fieldset>
</div>
