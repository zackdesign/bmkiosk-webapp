<%
if main_cart.line_items
  main_cart.items = main_cart.line_items
end

unless main_cart.items.empty?
%>
<table cellpadding="0" cellspacing="0" border="0" style="width: 90%;padding-top: 20px">
<%= render(:partial => "store/main_cart_item" , :collection => main_cart.items) %>
	<tr class="total-line" >
          <td></td>
		<td style='text-align: right'><b>Total:</b></td>
		<td class="total-cell" style="padding-left: 5px;" ><b><%= number_to_currency(main_cart.total_price) %></b></td>
	</tr>
</table>
<%
else
%>
<h3>There are no items in your shopping cart</h3>
<%
end
%>

