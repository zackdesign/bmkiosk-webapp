<%
unless main_cart.items.empty?
%>
<table cellpadding="0" cellspacing="0" border="0">
<%= render(:partial => "store/main_cart_item" , :collection => main_cart.items) %>
	<tr class="total-line" >
		<td><b>Total</b></td>
		<td class="total-cell" ><b><%= number_to_currency(main_cart.total_price) %></b></td>
	</tr>
</table>
<%
else
%>
<h3>There are no items in your shopping cart</h3>
<%
end
%>

