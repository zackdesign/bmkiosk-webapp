<h1>Website Users</h1><br><br>
<%= link_to "Add user",   :controller => 'login', :action => 'add_user' %> 
| <%= link_to "Log out",   :controller => 'login', :action => 'logout' %>
<br><br>
<ul style="margin-left: 20px">
<% for user in @all_users %>
<li><%= link_to "[X]" , { # link_to options
:controller => 'login',
:action => 'delete_user',
:id => user},
{ # html options
:method => :post,
:confirm => "Really delete #{user.name}?"
} %>
<%= h(user.name) %> (<%= h(user.showtype(user.usertype)) %>)
</li>
<% end %>
</ul> 