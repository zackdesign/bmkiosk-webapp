<div class="depot-form">
	<h2>Please Log In</h2>
	<hr />
<% form_tag({}, { :id => "login" }) do %>
	<p>
		<label for="password">Password:</label>
<%= password_field_tag :password, params[:password] %>
	</p>
	<p>
<%#= submit_tag "Login" %>
<%= link_to_function('Login', "$('login').submit()", { :class => "orange_button"} ) %>
	</p>
<% end %>
</div>