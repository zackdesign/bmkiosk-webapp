<% if cart_item == @current_item %>
<tr id="current_item" >
<% else %>
<tr>
<% end %>
<td colspan="3" style="border-bottom: 0px;"><div align="left"><%= h(cart_item.title) %></div></td>
</tr>
<tr>
<td><%= cart_item.quantity %>&times;</td>
<td class="item-price"><%= number_to_currency(cart_item.price) %></td>
<td><%= link_to_remote "[X]", :url => {:controller => 'store', :action => :remove_from_cart , :id => cart_item.product} %></td>
</tr>
